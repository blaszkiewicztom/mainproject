{% extends 'base.html.twig' %}
{% block body %}
    <div class="container" style="margin-top: 22px">
        <div class="row">
            <div class="col-sm-12 col-md-5 col-lg-5 mr-auto">
                <div class="jumbotron">
                    {{ form_start(register_form) }}
                    <div class="form-group">{{ form_row(register_form.email,{'label': 'Adres E-mail', 'attr': {'class': 'form-control'}}) }}</div>
                    <div class="form-group">{{ form_row(register_form.plainPassword.first,{'label': 'Wprowadź hasło', 'attr': {'class': 'form-control'}}) }}</div>
                    <div class="form-group">{{ form_row(register_form.plainPassword.second,{'label': 'Powtórz hasło', 'attr': {'class': 'form-control'}}) }}</div>
                    <div class="form-group">{{ form_row(register_form.company,{'label': 'Nazwa firmy', 'attr': {'class': 'form-control'}}) }}</div>
                    <div class="form-group">{{ form_row(register_form.nip,{'label': 'NIP', 'attr': {'class': 'form-control'}}) }}</div>
                    <div class="form-group">{{ form_row(register_form.regon,{'label': 'REGON', 'attr': {'class': 'form-control'}}) }}</div>
                    <div class="input-group">{{ form_row(register_form.conditions,{'label': 'akceptuję regulamin'}) }}</div>
                    <button type="submit" class="btn btn-primary">Potwierdź</button>
                    {{ form_end(register_form) }}
                </div>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-6">
                <div class="jumbotron">
                    <h3>Jakie korzyści przynosi rejestracja?</h3>
                    Opis ...
                </div>
            </div>
        </div>
    </div>
{% endblock %}