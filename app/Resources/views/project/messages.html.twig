{% extends 'base.html.twig' %}
{% block body %}

    <div class="container" style="margin-top: 22px">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                {% for msg in app.session.flashBag.get('message_sent_success') %}
                    <div class="alert alert-success" role="alert">{{ msg }}</div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-sm-12">
                    <div id="ajax_loading" style="text-align: center; display: none">
                        <img src="{{ asset('animations/loading.gif') }}" style="vertical-align: middle">
                    </div>
                    <div id="ajax_call"></div>
            </div>
            <div class="col-md-4 col-sm-12">

                    <button class="btn btn-secondary btn-lg btn-block" onclick='sendMessageFunction("{{ (path("send_message")) }}")'>Wyślij wiadomość</button>
                    <button class="btn btn-secondary btn-lg btn-block" onclick='loadHistoryOfMessages("{{ (path("load_history_of_messages")) }}")'>Historia wiadomości</button>
                    <button class="btn btn-secondary btn-lg btn-block" onclick='loadSystemMessages("{{ path("load_system_messages") }}")'>Wiadomości systemowe</button>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12">
               <div class="jumbotron" style="margin-top: 15px">
                   <h5>Aktualności</h5>
                   <div id="test"></div>
               </div>

            </div>
        </div>
    </div>

    <!-- Send Message Form Modal -->
    <div class="modal fade" id="sendMessageFormModal" tabindex="-1" role="dialog" aria-labelledby="sendMessageFormModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="sendMessageFormModalLabel">Nowa wiadomość</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="send_message_form_ajax"></div>
                    <div id="ajax_loading_message_form" style="text-align: center; display: none">
                        <img src="{{ asset('animations/loading.gif') }}" style="vertical-align: middle">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Zamknij</button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
